-- Dumping database structure for ALHILALDB
CREATE DATABASE IF NOT EXISTS `ALHILALDB` /*!40100 DEFAULT CHARACTER SET latin1 */ /*!80016 DEFAULT ENCRYPTION='N' */;
USE `ALHILALDB`;


-- Dumping structure for table ALHILALDB.role
CREATE TABLE IF NOT EXISTS `role` (
  `roletype_id` INT NOT NULL AUTO_INCREMENT,
  `roletype_name` varchar(20) UNIQUE,
  PRIMARY KEY (`roletype_id`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1 AUTO_INCREMENT=1;


INSERT INTO `role` (`roletype_name`) VALUES
('ADMIN'),
('CASH ADMIN'),
('STOCK ADMIN');


CREATE TABLE IF NOT EXISTS `user` (
  `user_id` int NOT NULL AUTO_INCREMENT,
  `user_name` varchar(100) NOT NULL,
  `password` varchar(100) NOT NULL,
  `roletype_name` varchar(20) NOT NULL,
  `date_of_Birth` DATE NOT NULL,
   PRIMARY KEY (`user_id`)

) ENGINE=InnoDB DEFAULT CHARSET=latin1 AUTO_INCREMENT=1;

CREATE TABLE IF NOT EXISTS `vendor` (
  `vendor_id` INT NOT NULL AUTO_INCREMENT,
  `vendor_name` varchar(20) UNIQUE,
  PRIMARY KEY (`vendor_id`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1 AUTO_INCREMENT=1;


CREATE TABLE IF NOT EXISTS `itemType` (
  `type_id` INT NOT NULL AUTO_INCREMENT,
  `item_Type` varchar(20) UNIQUE,
  PRIMARY KEY (`type_id`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1 AUTO_INCREMENT=1;

CREATE TABLE IF NOT EXISTS `stock` (
  `stock_id` int NOT NULL AUTO_INCREMENT,
  `item_Type` varchar(20) NOT NULL,
  `item_Name` varchar(20) NOT NULL,
  `vendor_name` varchar(20) NOT NULL,
  `bill_id`  varchar(20) UNIQUE,
  `bill_date` DATE NOT NULL,
  `unit_cost` float(8,2) NOT NULL,
  `quantity` int NOT NULL,
  `projected_cost` float(8,2) NOT NULL,
  `discounted_cost` float(8,2),
  `paid amount` float(10,2) ,
  `pending amount` float(10,2) ,
  `stock_entry_date` DATE ,
  `stock_modified_date` DATE,

   PRIMARY KEY (`stock_id`)

) ENGINE=InnoDB DEFAULT CHARSET=latin1 AUTO_INCREMENT=1;


